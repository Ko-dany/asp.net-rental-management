@model Midterm_EquipmentRental.Models.ViewModels.EquipmentCreateViewModel
@using Midterm_EquipmentRental.Models

@{
    ViewData["Title"] = "Create New Equipment";
}

<div class="container mt-4">
    <h2 class="mb-4">Create New Equipment</h2>

    <div class="row g-4">
        <!-- Form -->
        <div class="col-lg-7">
            <form method="post" action="#" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Equipment Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label">Category</label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Condition" class="form-label">Condition</label>
                    <select asp-for="Condition" class="form-select">
                        @foreach (var c in Enum.GetValues(typeof(EquipmentCondition)))
                        {
                            <option value="@c">@c</option>
                        }
                    </select>
                    <span asp-validation-for="Condition" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="IsAvailable" class="form-check-input" />
                    <label asp-for="IsAvailable" class="form-check-label">Is Available</label>
                </div>

                <button type="submit" class="btn btn-primary me-2">Create</button>
                <a href="#" class="btn btn-secondary">Cancel</a>
            </form>
        </div>

        <!-- Instructions -->
        <div class="col-lg-5">
            <div class="card">
                <div class="card-header fw-semibold">Instructions</div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Fill in all required equipment details</li>
                        <li>Name should be descriptive and unique</li>
                        <li>Category helps organize equipment types</li>
                        <li>Condition affects rental decisions</li>
                        <li>New equipment is available by default</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>