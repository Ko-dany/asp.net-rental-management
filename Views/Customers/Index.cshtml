@model IEnumerable<Midterm_EquipmentRental.Models.Customer>

@{
    ViewData["Title"] = "Customers";

    string RoleBadge(string role) =>
        role.ToString().Equals(UserRole.Admin, StringComparison.OrdinalIgnoreCase)
            ? "badge rounded-pill bg-danger"
            : "badge rounded-pill bg-primary";
}

<div class="container mt-4">

    <!-- Header + Add button -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Customers</h2>
        <a asp-controller="View" asp-action="AddCustomer" class="btn btn-primary">Add New Customer</a>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width:6rem;">ID</th>
                    <th>Name</th>
                    <th>Username</th>
                    <th style="width:8rem;">Role</th>
                    <th class="text-end" style="width:12rem;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Id</td>
                        <td>@c.Name</td>
                        <td>@c.UserName</td>
                        <td>
                            <span class="@RoleBadge(c.Role)">@c.Role</span>
                        </td>
                        <td class="text-end">
                            <div class="d-flex justify-content-end align-items-center gap-2">
                                <a asp-controller="View" asp-action="GetCustomerDetails" asp-route-id="@c.Id"
                                   class="btn btn-sm btn-outline-info me-2">Details</a>

                                <a asp-controller="View" asp-action="UpdateCustomer" asp-route-id="@c.Id"
                                   class="btn btn-sm btn-outline-primary me-2">Edit</a>

                                <form asp-controller="View" asp-action="DeleteCustomer" asp-route-id="@c.Id"
                                      method="post" class="d-inline"
                                      onsubmit="return confirm('Delete this customer?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>