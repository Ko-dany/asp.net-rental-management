@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2>Admin Dashboard</h2>
    <p>Welcome, Admin! You can manage equipment, customers, and rentals here.</p>

    <!-- Top Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary h-100">
                <div class="card-body">
                    <h3 class="card-title">12</h3>
                    <p class="card-text">Total Equipment</p>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="Equipment" asp-action="GetAllEquipment" class="text-white text-decoration-underline">View All</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success h-100">
                <div class="card-body">
                    <h3 class="card-title">7</h3>
                    <p class="card-text">Available</p>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="Equipment" asp-action="GetAllAvailableEquipment" class="text-white text-decoration-underline">View Available</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-warning h-100">
                <div class="card-body">
                    <h3 class="card-title">5</h3>
                    <p class="card-text">Currently Rented</p>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="Equipment" asp-action="GetAllRentedEquipment" class="text-white text-decoration-underline">View Rented</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-danger h-100">
                <div class="card-body">
                    <h3 class="card-title">2</h3>
                    <p class="card-text">Overdue Rentals</p>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="#" class="text-white text-decoration-underline">View Overdue</a>
                </div>
            </div>
        </div>
    </div> 
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-info h-100">
            <div class="card-body">
                <h3 class="card-title">8</h3>
                <p class="card-text">Total Customers</p>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-controller="Customer" asp-action="GetAllCustomers" class="text-white text-decoration-underline">View All</a>
            </div>
        </div>
    </div>
    <!-- Quick/System Panels -->
    <div class="row">

        <div class="col-md-9">
            <div class="row">
                <!-- Quick Actions -->
                <div class="col-md-7 mb-3">
                    <div class="card h-100">
                        <div class="card-header fw-bold">Quick Actions</div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary">Issue Equipment</button>
                                <button class="btn btn-success">Return Equipment</button>
                                <button class="btn btn-secondary">View All Rentals</button>
                                <button class="btn btn-dark">Add Equipment</button>
                                <button class="btn btn-dark">Add Customer</button>
                                <button class="btn btn-danger">View Overdue Rentals</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- System Status -->
                <div class="col-md-5 mb-3">
                    <div class="card h-100">
                        <div class="card-header fw-bold">System Status</div>
                        <div class="card-body">
                            <p><strong>Active Rentals:</strong> 5</p>
                            <p><strong>Overdue Rentals:</strong> 2</p>
                            <p><strong>Logged in as:</strong> admin (Admin)</p>
                            <p><strong>System Status:</strong> <span class="text-success">Online</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
